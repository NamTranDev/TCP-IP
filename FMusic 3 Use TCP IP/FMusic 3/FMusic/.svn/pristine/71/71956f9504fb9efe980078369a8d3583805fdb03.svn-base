<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playerScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fragment_player_song_title_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F81414"
        android:orientation="vertical">

        <TextView
            android:id="@+id/song_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="Song Title"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/fragment_play_progress_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F81414"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/current_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="0:00"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/song_playing_progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="6dip"
            android:minHeight="6dip"
            android:layout_weight="1"
            android:indeterminate="false"
            android:backgroundTint="#0029ff" />

        <TextView
            android:id="@+id/total_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="0:00"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_play_btn_option_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F81414"
        android:layout_gravity="bottom|center_vertical"
        android:gravity="center_vertical|center">

        <ImageButton
            android:id="@+id/btnRepeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:src="@drawable/ic_player_repeat" />

        <ImageView
            android:id="@+id/btn_previous_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_player_previous"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" />


        <ImageView
            android:id="@+id/btn_play_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_player_play"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />


        <ImageView
            android:id="@+id/btn_next_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_player_next"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <ImageButton
            android:id="@+id/btnShuffle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:src="@drawable/ic_player_shuffle" />
    </LinearLayout>
</LinearLayout>
